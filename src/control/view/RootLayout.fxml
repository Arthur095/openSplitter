          </Menu>
          <Menu mnemonicParsing="false" text="Edit">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleAddGame" text="Add game" />
                  <MenuItem mnemonicParsing="false" onAction="#handleEditGame" text="Edit curr. game" />
                  <MenuItem mnemonicParsing="false" onAction="#handleDeleteGame" text="Delete curr. game" />
            </items>
          </Menu>
          <Menu mnemonicParsing="false" text="Help">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#handleGithub" text="GitHub page" />
            </items>
          </Menu>
        </menus>
      </MenuBar>
   </top>
</BorderPane>
